FROM python:3.11-slim

# Security: Create non-root user first
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Security: Update packages and remove package manager
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get purge -y --auto-remove gcc

WORKDIR /app

# Security: Copy and install dependencies as root, then switch
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt \
    && pip cache purge

# Security: Copy application files and set ownership
COPY . .
RUN chown -R appuser:appuser /app \
    && chmod -R 755 /app

# Security: Switch to non-root user
USER appuser

# Security: Run on non-privileged port
EXPOSE 8001

# Security: Use exec form and specific command
CMD ["python", "-m", "uvicorn", "enhanced_production_api:app", "--host", "0.0.0.0", "--port", "8001"]