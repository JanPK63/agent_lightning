# Agent Lightning Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://agent_user:agent_pass@localhost:5432/agent_lightning
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agent_lightning
DB_USER=agent_user
DB_PASSWORD=agent_pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redis_secure_password_123

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-here-change-in-production

# API Settings
API_PORT=8001
DASHBOARD_PORT=8051

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Service Ports
AGENT_DESIGNER_PORT=8002
WORKFLOW_ENGINE_PORT=8003
INTEGRATION_HUB_PORT=8004
AI_MODEL_SERVICE_PORT=8005
AUTH_SERVICE_PORT=8006
WEBSOCKET_SERVICE_PORT=8007

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# AI Model Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_TOKEN=

# Feature Flags
USE_DATABASE=true
USE_CACHE=false
USE_MESSAGE_QUEUE=false
ENABLE_DISTRIBUTED_TRACING=false